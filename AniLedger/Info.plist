<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- App Identity -->
	<key>CFBundleIdentifier</key>
	<string>com.aniledger</string>
	<key>CFBundleName</key>
	<string>AniLedger</string>
	<key>CFBundleDisplayName</key>
	<string>AniLedger</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	
	<!-- Version Information -->
	<key>CFBundleShortVersionString</key>
	<string>0.3.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	
	<!-- App Information -->
	<key>NSHumanReadableCopyright</key>
	<string>Copyright Â© 2025 AniLedger. All rights reserved.</string>
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.entertainment</string>
	<key>LSMinimumSystemVersion</key>
	<string>12.0</string>
	
	<!-- App Description -->
	<key>NSAppleScriptEnabled</key>
	<false/>
	<key>LSUIElement</key>
	<false/>
	
	<!-- URL Schemes for OAuth -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>com.aniledger.auth</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>aniledger</string>
			</array>
		</dict>
	</array>
	
	<!-- Privacy - User Notifications -->
	<key>NSUserNotificationsUsageDescription</key>
	<string>AniLedger would like to send you notifications about new anime episodes from your watching list.</string>
	
	<!-- Privacy - Network Usage -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>anilist.co</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<false/>
				<key>NSIncludesSubdomains</key>
				<true/>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<true/>
				<key>NSExceptionMinimumTLSVersion</key>
				<string>TLSv1.2</string>
			</dict>
			<key>graphql.anilist.co</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<false/>
				<key>NSIncludesSubdomains</key>
				<true/>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<true/>
				<key>NSExceptionMinimumTLSVersion</key>
				<string>TLSv1.2</string>
			</dict>
		</dict>
	</dict>
	
	<!-- Document Types (if needed for future features) -->
	<key>CFBundleDocumentTypes</key>
	<array/>
	
	<!-- Supported Platforms -->
	<key>LSRequiresIPhoneOS</key>
	<false/>
	
	<!-- High Resolution Capable -->
	<key>NSHighResolutionCapable</key>
	<true/>
	
	<!-- Principal Class -->
	<key>NSPrincipalClass</key>
	<string>NSApplication</string>
	
	<!-- Main Storyboard (not used in SwiftUI apps) -->
	<key>NSMainStoryboardFile</key>
	<string></string>
</dict>
</plist>
